<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/editProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/requests"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:drawableTop="?attr/actionModePasteDrawable"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/athiti_semibold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="startRequestsView"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/requests"
            android:textAlignment="center"
            android:textSize="24sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/newProduct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:drawableTop="@drawable/ic_action_name"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/athiti_semibold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="startCrudActivity"
            android:padding="0dp"
            android:text="@string/new_product"
            android:textSize="24sp"
            app:cornerRadius="0dp" />

    </LinearLayout>
</LinearLayout>